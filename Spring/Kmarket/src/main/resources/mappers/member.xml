<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.kmarket.dao.MemberDao">
	<insert id="insertMember">
		INSERT INTO `km_member` SET
			`uid`=#{km_uid},
			`pass`=PASSWORD(#{km_pass1}),
			`name`=#{km_name},
			`gender`=#{km_gender},
			`email`=#{km_email},
			`hp`=#{km_hp},
			`zip`=#{km_zip},
			`addr1`=#{km_addr1},	
			`addr2`=#{km_addr2},	
			`ip`=#{regip},	
			`rdate`=NOW();
	</insert>
	<select id="selectTerms" resultType="kr.co.kmarket.vo.TermsVo">
		SELECT * FROM `km_terms`;
	</select>
	
	<select id="selectMember" resultType="kr.co.kmarket.vo.MemberVo">
		SELECT * FROM `km_member` WHERE `uid`=#{km_uid} AND `pass`=PASSWORD(#{km_pass});	
	</select>
	<select id="selectMembers"></select>
	
	<select id="selectCountUid" resultType="int">
		SELECT COUNT(`uid`) FROM `km_member` WHERE `uid`=#{uid};
	</select>
	<select id="selectCountNick" resultType="int">
		SELECT COUNT(`nick`) FROM `km_member` WHERE `nick`=#{nick};
	</select>
	<select id="selectCountEmail" resultType="int">
		SELECT COUNT(`email`) FROM `km_member` WHERE `email`=#{email};
	</select>
	<select id="selectCountHp" resultType="int">
		SELECT COUNT(`hp`) FROM `km_member` WHERE `hp`=#{hp};
	</select>
	
	<update id="updateMember"></update>
	<delete id="deleteMember"></delete>
</mapper>
